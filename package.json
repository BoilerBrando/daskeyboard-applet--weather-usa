{
  "name": "q-applet-weather",
  "version": "1.0.0",
  "description": "Das Keyboard Applet for Weather Forecast",
  "main": "index.js",
  "scripts": {
    "test": "mocha"
  },
  "author": "Cory Kim",
  "license": "MIT",
  "dependencies": {
    "daskeyboard-applet": "~2.4.3"
  },
  "qConfig": {
    "geometry": {
      "width": 4,
      "height": 1,
      "defaults": {
        "origin": {
          "x": 0,
          "y": 1
        }
      }
    },
    "applet": {
      "questions": [
        {
          "key": "zoneId",
          "label": "Choose your city",
          "help": "select the city from the dropdown",
          "required": true,
          "order": 1,
          "controlType": "dropdown",
          "dynamic": true,
          "options": []
        }
      ],
      "defaults": {}
    },
    "requirements": {
      "applet": {
        "zoneId": "select"
      }
    }
  },
  "devDependencies": {
    "mocha": "^5.2.0"
  }
}